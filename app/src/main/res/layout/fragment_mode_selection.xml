<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <!-- Global Background Glow -->
    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/bg_glow_top_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="150dp"
        android:translationY="-150dp" />

    <TextView
        android:id="@+id/tvModeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="24dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="-0.02"
        android:text="Select\nMode"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvModeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Choose your operational environment"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvModeTitle"
        app:layout_constraintTop_toBottomOf="@id/tvModeTitle" />

    <LinearLayout
        android:id="@+id/llModes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvModeSubtitle">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cardPersonal"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/glass_surface"
            android:stateListAnimator="@animator/button_squish"
            android:text="Personal Mode"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_person"
            app:iconGravity="textStart"
            app:iconPadding="24dp"
            app:iconSize="40dp"
            app:iconTint="@color/primary"
            app:strokeColor="@color/rim_light_start"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cardGroup"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/glass_surface"
            android:stateListAnimator="@animator/button_squish"
            android:text="Group Mode"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_group"
            app:iconGravity="textStart"
            app:iconPadding="24dp"
            app:iconSize="40dp"
            app:iconTint="@color/income_green"
            app:strokeColor="@color/rim_light_start"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cardParent"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/glass_surface"
            android:stateListAnimator="@animator/button_squish"
            android:text="Parent Mode"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_lock"
            app:iconGravity="textStart"
            app:iconPadding="24dp"
            app:iconSize="40dp"
            app:iconTint="@color/error"
            app:strokeColor="@color/rim_light_start"
            app:strokeWidth="1dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
