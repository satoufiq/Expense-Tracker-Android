<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivHeaderIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_dashboard_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Overview"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivHeaderIcon"
            app:layout_constraintStart_toEndOf="@id/ivHeaderIcon"
            app:layout_constraintTop_toTopOf="@id/ivHeaderIcon" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="52dp"
            android:text="Welcome "
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivHeaderIcon" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNetBalance"
            style="@style/Widget.ExpenseTracker.PremiumCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="end|top"
                    android:alpha="0.5"
                    android:background="@drawable/bg_fab_glow" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBalanceIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/glow_purple"
                        android:padding="12dp"
                        android:src="@drawable/ic_wallet"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:tint="@color/primary" />

                    <TextView
                        android:id="@+id/tvBalanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Total Budget"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/ivBalanceIcon"
                        app:layout_constraintStart_toEndOf="@id/ivBalanceIcon"
                        app:layout_constraintTop_toTopOf="@id/ivBalanceIcon" />

                    <TextView
                        android:id="@+id/tvNetBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="monospace"
                        android:text="৳0.00"
                        android:textColor="@color/primary"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivBalanceIcon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNetBalance">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_income"
                            app:tint="@color/income_green" />

                        <TextView
                            android:id="@+id/tvBudgetStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Set your budget in Personal Mode"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/llStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cardNetBalance">

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.ExpenseTracker.PremiumCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="end|bottom"
                        android:alpha="0.6"
                        android:background="@drawable/bg_fab_glow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@color/glow_red"
                                android:padding="6dp"
                                android:src="@drawable/ic_wallet"
                                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                                app:tint="@color/expense_red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Total Expenses"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvExpenses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="monospace"
                            android:text="৳0.00"
                            android:textColor="@color/expense_red"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.ExpenseTracker.PremiumCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="end|bottom"
                        android:alpha="0.6"
                        android:background="@drawable/bg_fab_glow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@color/glow_green"
                                android:padding="6dp"
                                android:src="@drawable/ic_income"
                                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                                app:tint="@color/income_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Remaining"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="monospace"
                            android:text="৳0.00"
                            android:textColor="@color/income_green"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvQuickActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawablePadding="8dp"
            android:text="⚡ Quick Actions"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_dashboard_mode"
            app:drawableTint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llStats" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2"
            app:layout_constraintTop_toBottomOf="@id/tvQuickActions">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cardModeSelection"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:stateListAnimator="@animator/button_squish"
                android:text="Select\nMode"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_dashboard_mode"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cardAlerts"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:stateListAnimator="@animator/button_squish"
                android:text="Recent\nAlerts"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_dashboard_alerts"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cardLogout"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_columnSpan="2"
                android:layout_margin="8dp"
                android:stateListAnimator="@animator/button_squish"
                android:text="Logout Session"
                android:textAllCaps="false"
                android:textColor="@color/expense_red"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_dashboard_logout"
                app:iconTint="@color/expense_red" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
