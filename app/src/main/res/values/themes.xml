<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ExpenseTracker2207050" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:statusBarColor">@color/bg_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        
        <item name="colorSurface">@color/card_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/card_highlight</item>
        
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.ExpenseTracker2207050" parent="Base.Theme.ExpenseTracker2207050" />

    <style name="Widget.ExpenseTracker.PremiumCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="cardElevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.ExpenseTracker.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.ExpenseTracker.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <style name="TextAppearance.ExpenseTracker.Balance" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/income_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
    </style>
</resources>
